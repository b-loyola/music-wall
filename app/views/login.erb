<% if @login_error %>
	<div>
		<p><%= @login_error %></p>
	</div>
<% end %>

<form method="post" action="/login">
	<div>
		<label>Email:</label>
		<input type="email" name="email" value="<%= @email if @email %>">
	</div>
	<div>
		<label>Password:</label>
		<input type="password" name="password">
	</div>
	<div>
		<input type="submit" value="Log in!">
	</div>
</form>